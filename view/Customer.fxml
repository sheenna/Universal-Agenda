    </TableView>

    <ButtonBar layoutX="20.0" layoutY="506.0" prefHeight="571.0" prefWidth="800.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="550.0">
        <buttons>
            <Button fx:id="refreshButton" layoutX="325.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#refreshView" text="Refresh" />
            <Button fx:id="customerAddButton" mnemonicParsing="false" onMouseClicked="#addCustomer" text="Add" />
            <Button fx:id="customerEditButton" layoutX="695.0" layoutY="23.0" mnemonicParsing="false" onMouseClicked="#editCustomer" text="Edit" />
            <Button fx:id="customerDeleteButton" layoutX="610.0" layoutY="23.0" mnemonicParsing="false" onMouseClicked="#deleteCustomer" text="Delete" />
        </buttons>
    </ButtonBar>

</AnchorPane>
